<%= @restaurant.name %>
<%= @restaurant.description %>
<% @restaurant.branches.each do |b| %>
  <%= link_to "##{b.city}, #{b.address}", restaurant_branch_path(@restaurant, b) %>
<% end %>
<% if can? :update, @restaurant %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<% end %>
<% if can? :create, @restaurant.branches %>
  <%= link_to 'Add Branch', new_restaurant_branch_path(@restaurant) %>
<% end %>
