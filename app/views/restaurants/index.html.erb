  <div class="font-thin text-center my-8 text-xl flex-1">
  <p>
    Choose Restaurant By City
  </p>
</div>
  
  <div class="container flex flex-wrap justify-center m-auto">
    <% @restaurants.each do |r| %>
      <div class="lg:w-1/5 sm:w-1/2 xl:1/4 rounded-lg overflow-hidden shadow-lg m-3 bg-white card">
          <%= image_tag "burger.jpg" %>
        <div class="px-6 py-4 flex flex-col items-stretch flex-wrap jusrify-end">
          <div class="font-bold text-lg mb-1 flex-1">
            <p>
              <%= r.name %>
            </p>
            <p class="text-gray-700 font-light text-sm">
              <%= r.description %>
            </p>
            <% cities(r.name).each do |c|%>
              <%if c%>
                <div class="inline-block bg-sp-mn hover:bg-gray-400 hover:text-gray-700 rounded-full px-3 py-1 mt-2 text-xs font-semibold text-white mr-2">
                    <%= (link_to "##{c.city}", by_city_path(city: c.city))  %>
                </div>
              <%end%>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if can? :create, Restaurant %>
<div class="flex justify-center mt-24">
<div class="flex flex-col justify-center h-24  my-3  mx-24  w-1/4 rounded-lg overflow-hidden shadow-lg m-4 bg-white card m-auto">
  <div class="font-bold text-lg mb-1 flex-1 text-center text-red-800">
    <p class="mt-4">
      Admin Control
    </p>
  </div>
    <%= link_to 'New Restaurant', new_restaurant_path, class: "mb-8 bg-gray-500 hover:bg-red-800 text-white font-bold py-2 px-4 rounded m-auto mt-2 mb-8" %>
  </div>
</div>
<% end %>