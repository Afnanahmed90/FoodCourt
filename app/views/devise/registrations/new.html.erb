<h2>Sign up</h2>
<div class="w-1/4 m-auto shadow-lg m-4 p-4 bg-white flex justify-center card mt-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="text-gray-700">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", input_html:{class:  "mb-4 border form-input mt-1 block w-64  text-gray-600"} %>
  </div>

  <div class="text-gray-700 m-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", input_html:{class:  "mb-4 border form-input mt-1 block w-64  text-gray-600"} %>
  </div>

  <div class="text-gray-700 m-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", input_html:{class:  "mb-4 border form-input mt-1 block w-64  text-gray-600"} %>
  </div>

  <div class="actions mt-8">
    <%= f.submit "Sign up" , class: "  bg-sp-mn hover:bg-sp-sc text-white  font-bold py-2 px-4 rounded m-auto w-full" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
