<h2>Log in</h2>
<div class="w-1/4 m-auto shadow-lg m-4 p-4 bg-white flex justify-center card mt-8">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-gray-700">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", input_html:{class:  "mb-4 border form-input mt-1 block w-64  text-gray-600"} %>
  </div>

  <div class="text-gray-700">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", input_html:{class:  "mb-4 border form-input mt-1 block w-64  text-gray-600"} %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="text-gray-700">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "  bg-sp-mn hover:bg-sp-sc text-white  font-bold py-2 px-4 rounded m-auto w-full" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
